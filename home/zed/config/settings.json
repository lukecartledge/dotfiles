// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
//
// NOTE: Sensitive settings (API tokens, etc.) should be placed in
// ~/.config/zed/settings.local.json which is not version controlled.
{
  "agent_servers": {
    "opencode": {
      "type": "registry"
    }
  },
  "edit_predictions": {
    "provider": "copilot"
  },
  "terminal": {
    "font_family": "FiraCode Nerd Font Mono"
  },
  "context_servers": {
    "mcp-server-context7": {
      "enabled": true,
      "remote": false,
      "settings": {
        "context7_api_key": "CONTEXT7_API_KEY"
      }
    },
    "mcp-server-github": {
      "enabled": true,
      "remote": false,
      "settings": {
        "github_personal_access_token": "GITHUB_PERSONAL_ACCESS_TOKEN"
      }
    },
    "terraform-context-server": {
      "enabled": true,
      "settings": {}
    }
    // Add context servers with tokens in settings.local.json
  },
  "agent": {
    "favorite_models": [
      {
        "provider": "ollama",
        "model": "deepseek-r1:latest"
      },
      {
        "provider": "copilot_chat",
        "model": "claude-opus-4.5"
      },
      {
        "provider": "copilot_chat",
        "model": "claude-sonnet-4.5"
      },
      {
        "provider": "copilot_chat",
        "model": "gemini-3-pro-preview"
      },
      {
        "provider": "copilot_chat",
        "model": "claude-opus-4.6"
      }
    ],
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-opus-4.6"
    }
  },
  "autosave": "on_focus_change",
  "icon_theme": "Catppuccin Latte",
  "base_keymap": "SublimeText",
  "theme": "Nightfox - opaque",
  "theme_overrides": {
    "Nightfox - opaque": {
      "syntax": {
        "function": {
          "font_style": "italic"
        },
        "comment": {
          "font_style": "italic"
        },
        "constant": {
          "font_style": "italic"
        },
        "type": {
          "font_weight": 800
        }
      }
    }
  },
  "minimap": {
    "show": "always",
    "thumb_border": "full",
    "current_line_highlight": "line"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 16,
  "ui_font_family": "Operator Mono Lig",
  "buffer_font_family": "Operator Mono Lig",
  "buffer_font_size": 15.0,
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "rubocop"]
    }
  }
}
